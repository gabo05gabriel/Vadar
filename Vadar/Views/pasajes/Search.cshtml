@model Vadar.Models.pasajes

@{
    ViewBag.Title = "Search";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Buscar</h2>
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
    <link href="~/Estilos/form.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <h4>Buscar Pasajes</h4>

    @using (Html.BeginForm("Search", "pasajes", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        <div class="form-group">
            @Html.Label("Nombre", new { @class = "control-label" })
            @Html.TextBox("nombre", null, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.nombre)
        </div>

        <div class="form-group">
            @Html.Label("Fecha de Inicio", new { @class = "control-label" })
            @Html.TextBox("fechaInicio", null, new { @class = "form-control", @type = "date" })
        </div>

        <div class="form-group">
            @Html.Label("Fecha de Fin", new { @class = "control-label" })
            @Html.TextBox("fechaFin", null, new { @class = "form-control", @type = "date" })
        </div>

        <button type="submit" class="btn-default">Buscar</button>
    }
    <h4>Puedes buscar tu pasaje por fechas especificas para generar un reporte en pdf de tus pasajes no te olvides que tu nombre debe ser el mismo de siempre resperando las mayusculas</h4>
</body>
</html>
